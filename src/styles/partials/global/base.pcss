.blog-article {
  h1:first-of-type {
    margin-top: 0;
  }
  a.back-link + section h1:first-of-type {
    margin-top: 1em;
  }
}

.blog-article {
  h3 {
    color: color(grey);
  }
  /*
  a {
      color: color(purple-light);
      &:hover {
          color: color(purple);
      }
      &:active
  }
  */
}

.breadcrumb {
  list-style-type: none;
  margin: 0;
  padding: 0 0 2rem 0;
  li {
    color: color(grey);
    display: block;
    float: left;
    position: relative;
    &::after {
      content: "/";
      display: block;
      top: 0;
      right: 0.5rem;
      position: absolute;
    }
    &:last-child::after {
      display: none;
    }
    a {
      padding: 0 1.5rem 0 0;
    }
  }
}

.blog.content {
  max-width: 1200px;
}

